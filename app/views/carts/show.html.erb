<% total_price = 0 %>
<% @cartitems.each do |e| %>
  商品名: <%= Product.find(e.product_id).name %>
  価格: <%= Product.find(e.product_id).price %>
  数量: <%= e.qty %>
  <%= link_to '削除', cartitem_path(e), data: { turbo_method: :delete } %>
  <br>
  
  <% product_price = Product.find(e.product_id).price %>
  <% total_price += product_price * e.qty %> <!-- 合計金額の計算 -->
<% end %>

合計金額: <%= total_price %> 円

<%= link_to "商品一覧に戻る", root_path %>

